<Window x:Class="AutoGameHDR.ProcessSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加游戏到自定义名单" Height="520" Width="480"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{DynamicResource WindowBackground}"
        Foreground="{DynamicResource PrimaryText}"
        Style="{StaticResource {x:Type Window}}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="方式 1: 从正在运行的进程中选择 (双击添加)" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="方式 2: 点击左下角“浏览文件”手动选择 exe" Foreground="{DynamicResource SecondaryText}"/>
        </StackPanel>

        <ListBox x:Name="ProcessList" Grid.Row="1" BorderThickness="1" 
                 BorderBrush="{DynamicResource BorderBrush}" 
                 Background="{DynamicResource WindowBackground}" 
                 Foreground="{DynamicResource PrimaryText}"
                 MouseDoubleClick="ProcessList_MouseDoubleClick"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Padding="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="{Binding ProcessName}" 
                                       Foreground="{DynamicResource PrimaryText}"/>
                            <TextBlock Text="{Binding WindowTitle}" 
                                       FontSize="11" 
                                       Foreground="{DynamicResource SecondaryText}" 
                                       Margin="0,2,0,0"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="📂 浏览文件..." Click="Browse_Click" 
                    Height="32" MinWidth="100"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="刷新" Click="Refresh_Click" 
                        Height="32" MinWidth="80" Margin="0,0,10,0"/>

                <Button Content="取消" Click="Cancel_Click" 
                        Height="32" MinWidth="80" Margin="0,0,10,0"/>

                <Button Content="添加选中" Click="Select_Click" 
                        Height="32" MinWidth="100" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>