<Window x:Class="AutoGameHDR.ProcessSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择正在运行的游戏" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="请从列表中选择游戏进程 (双击直接添加)：" Margin="0,0,0,10" Foreground="#666"/>

        <ListBox x:Name="ProcessList" Grid.Row="1" BorderThickness="1" BorderBrush="#DDD" MouseDoubleClick="ProcessList_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding ProcessName}" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="{Binding WindowTitle}" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="刷新列表" Click="Refresh_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="取消" Click="Cancel_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button Content="添加选中进程" Click="Select_Click" Padding="15,5" Background="#0078D7" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>